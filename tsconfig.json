{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@assets/icons/*": [
        "./src/main/core/assets/icons/*"
      ],
      "@assets/images/*": [
        "./src/main/core/assets/images/*"
      ],
      "@components/atoms/*": [
        "./src/main/presentations/frontend/components/atoms/*"
      ],
      "@components/molecules/*": [
        "./src/main/presentations/frontend/components/molecules/*"
      ],
      "@components/organisms/*": [
        "./src/main/presentations/frontend/components/organisms/*"
      ],
      "@components/templates/*": [
        "./src/main/presentations/frontend/components/templates/*"
      ],
      "@components/pages/*": [
        "./src/main/presentations/frontend/components/pages/*"
      ],
      "@styles/*": [
        "./src/main/presentations/frontend/styles/*"
      ],
      "@libraries/*": [
        "./src/main/core/libraries/*"
      ],
      "@hooks/*": [
        "./src/main/presentations/frontend/hooks/*"
      ],
      "@static/*": [
        "./src/main/presentations/frontend/static/*"
      ],
      "@configs/*": [
        "./src/main/core/configs/*"
      ],
      "@controllers/*": [
        "./src/main/presentations/backend/controllers/*"
      ],
      "@repositories/*": [
        "./src/main/domain/repositories/*"
      ],
      "@entities/*": [
        "./src/main/domain/entities/*"
      ],
      "@usecases/*": [
        "./src/main/domain/usecases/*"
      ],
      "@frontend/utils/*": [
        "./src/main/presentations/frontend/utils/*"
      ],
      "@frontend/types/*": [
        "./src/main/presentations/frontend/types/*"
      ],
      "@backend/utils/*": [
        "./src/main/presentations/backend/utils/*"
      ],
      "@backend/types/*": [
        "./src/main/presentations/backend/types/*"
      ],
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}